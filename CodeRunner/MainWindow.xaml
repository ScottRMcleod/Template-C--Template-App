<Window x:Class="CodeRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeRunner"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnGo" Content="Go !" HorizontalAlignment="Left" Margin="208,219,0,0" VerticalAlignment="Top" Width="75" Click="RunCode"/>
        <Label x:Name="label" Content="Enter a value:" HorizontalAlignment="Left" Margin="58,29,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Height="23" Margin="140,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="227"/>
        <TextBox x:Name="txtOutput" HorizontalAlignment="Left" Height="152" Margin="140,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="227"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="290,219,0,0" VerticalAlignment="Top" Width="75" Click="ClearOutput"/>

    </Grid>
</Window>
